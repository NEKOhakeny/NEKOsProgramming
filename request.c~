#include<stdio.h>
int main(){
    int i ;
    int array[] = {11,22,33,44};
    long l_array[] = {128,256,512,1024};
    double d_array[] = {1e+4, 2e+3, 3e+2, 4e+1};
    char c_array[] = {'A','B','C','D'};
    char c_2d_array[][6] = {"a","bc","def","ghij"};
    char *str_array[] = {"A","BCD","EF","GHI"};
    FILE *file;
    file = fopen("prog01.txt","w");
    for(int i = 0; i <4 ; i++){
        if(i > 0){
	  long int i = &d_array[i] - &d_array[i - 1];
	  fprintf(file,"sizeof(d_array) is %ld\n",i);
	  i = &c_array[i] - &c_array[i - 1];
	  fprintf(file,"sizeof(c_array) is %ld\n",i);
	  i = &c_2d_array[i] - &c_2d_array[i - 1];
	  fprintf(file,"sizeof(c_2d_array) is %ld\n",i);
	  i = &str_array[i] - &str_array[i - 1]
	  fprintf(file,"sizeof(str_array) is %ld\n",i);
        }
	fprintf(file,"\n");
        printf("%d %p %d\n",i,&array[i],array[i]);
        printf("\n%p\n",array);
    }
    fclose(file);
    printf("Size of each type\n");
    printf(" int: %ld,  long: %ld,  double: %ld,  char: %ld\n", sizeof(int), sizeof(long), sizeof(double), sizeof(char));
    printf("int*: %ld, long*: %ld, double*: %ld, char*: %ld\n", sizeof(int *), sizeof(long *), sizeof(double *), sizeof(char *));
    
    return 0;

}
